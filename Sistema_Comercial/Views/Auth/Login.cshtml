
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Login | Sistema Comercial </title>

    <!-- Bootstrap -->
    <link href="~/Vendors/" rel="stylesheet">
    <link href="~/Vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/Content/Alela/css/custom.min.css" rel="stylesheet" />

</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="@Url.Action("Login","Auth")" method="post">
                        <h1>Ingreso</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Usuario" required="" name="NombreUsuario" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Contraseña" required="" name="Contrasena" />
                        </div>
                        <div>
                            @if (ViewData["Mensaje"] != null)
                            {
                            <p class="text-danger">@ViewData["Mensaje"]</p>
                            }
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">Iniciar Sesión</button>
                        </div>


                        <div class="clearfix"></div>


                    </form>
                </section>
            </div>

        </div>
    </div>
</body>
</html>

